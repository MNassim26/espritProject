<!DOCTYPE html>
<html>

  <head>
    <meta charset="UTF-8">
    <link rel="stylesheet" href="https://maxst.icons8.com/vue-static/landings/line-awesome/line-awesome/1.3.0/css/line-awesome.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-+0n0xVW2eSR5OomGNYDnhzAbDsOXxcvSN1TPprVMTNDbiYZCxYbOOl7+AMvyTG2x" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-gtEjrD/SeCtmISkJkNUaaKMoLD0//ElJ19smozuHV6z3Iehds+3Ulb9Bn9Plx0x4" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="style.css">
    <title>{% block title %}Welcome!{% endblock %}</title>
    {% block stylesheets %}{% endblock %}
    </head>
    
    <body>
    {% set route_name = app.request.attributes.get('_route') %}
      <div class="sidebar">
        <div class="d-flex flex-column flex-shrink-0 p-3 text-white bg-dark" style="height:100%;">
          <a href="/" class="d-flex align-items-center mb-3 mb-md-0 me-md-auto text-white text-decoration-none">
            <svg class="bi me-2" width="40" height="32"><use xlink:href="#bootstrap"></use></svg>
            <span class="fs-4">Tech Store</span>
          </a>
          <hr>
          <ul class="nav nav-pills flex-column mb-auto">
            <li class="nav-item">
              {% if route_name == "listOrders" %} 
                <a href="{{ path('listOrders') }}" class="nav-link active" aria-current="page">
              {% else %} 
                <a href="{{ path('listOrders') }}" class="nav-link text-white" aria-current="page">
              {% endif %}
              <svg class="bi me-2" width="16" height="16"><use xlink:href="#home"></use></svg>
              Gestion des commandes
              </a>
            </li>
            <li>
              {% if route_name == "listFactures" %} 
                <a href="{{ path('listFactures') }}" class="nav-link active" aria-current="page">
              {% else %} 
                <a href="{{ path('listFactures') }}" class="nav-link text-white" aria-current="page">
              {% endif %}
              <svg class="bi me-2" width="16" height="16"><use xlink:href="#speedometer2"></use></svg>
              Gestion des factures
              </a>
            </li>
            <li>
            {% if route_name == "listProducts" %} 
                <a href="{{ path('listProducts') }}" class="nav-link active" aria-current="page">
              {% else %} 
                <a href="{{ path('listProducts') }}" class="nav-link text-white" aria-current="page">
              {% endif %}
              <svg class="bi me-2" width="16" height="16"><use xlink:href="#table"></use></svg>
              Gestion des produits
              </a>
            </li>
            <li>
               {% if route_name == "listCategories" %} 
                <a href="{{ path('listCategories') }}" class="nav-link active" aria-current="page">
              {% else %} 
                <a href="{{ path('listCategories') }}" class="nav-link text-white" aria-current="page">
              {% endif %}
                <svg class="bi me-2" width="16" height="16"><use xlink:href="#grid"></use></svg>
                Gestion des cat√©gories
              </a>
            </li>
            <li>
              {% if route_name == "listSuppliers" %} 
                <a href="{{ path('listSuppliers') }}" class="nav-link active" aria-current="page">
              {% else %} 
                <a href="{{ path('listSuppliers') }}" class="nav-link text-white" aria-current="page">
              {% endif %}
                <svg class="bi me-2" width="16" height="16"><use xlink:href="#people-circle"></use></svg>
                Gestion des fournisseurs
              </a>
            </li>
          </ul>
          <hr>
          <div class="dropdown">
            <a href="#" class="d-flex align-items-center text-white text-decoration-none dropdown-toggle" id="dropdownUser1" data-bs-toggle="dropdown" aria-expanded="false">
              <img src="images/admin.jpg" alt="" width="32" height="32" class="rounded-circle me-2">
              <strong>Admin</strong>
            </a>
            <ul class="dropdown-menu dropdown-menu-dark text-small shadow" aria-labelledby="dropdownUser1">
              <li><a class="dropdown-item" href="#">Sign out</a></li>
            </ul>
          </div>
        </div>
      </div>
      {% block body %}{% endblock %}
      {% block javascripts %}{% endblock %}
    </body>
</html>