
<a href="{{ path('exportProducts') }}">Export</a>
<a href="{{ path('addProduct')}}">Ajouter</a>
<table class="table" border="1">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Prix</th>
            <th>Quantité</th>
            <th>Catégorie</th>
            <th>Fournisseur</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        {% for item in products %}
            <tr>
                <td>{{ item.id }}</td>
                <td>{{ item.name }}</td>
                <td>{{ item.price }} DT</td>
                <td>{{ item.quantity }}</td>
                <td>{{ item.category }}</td>
                <td>{{ item.supplier }}</td>
                <td>
                    <a href="{{ path('deleteProduct',{'id':item.id}) }}">Delete</a>
                    <a href="{{ path('updateProduct',{'id':item.id}) }}">Update</a>
                </td>
            </tr>
        {% endfor %}
    </tbody>
</table>
{% for message in app.flashes('ExcelFileSaved') %}
    {{ message }}
{% endfor %}
{% for message in app.flashes('productAdded') %}
    {{ message }}
{% endfor %}
{% for message in app.flashes('productUpdated') %}
    {{ message }}
{% endfor %}
{% for message in app.flashes('productDeleted') %}
    {{ message }}
{% endfor %}
{% for message in app.flashes('productDeleteError') %}
    {{ message }}
{% endfor %}