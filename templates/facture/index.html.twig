<a href="{{ path('exportFactures') }}">Export</a>
<table class="table" border="1">
    <thead>
        <tr>
            <th>Id</th>
            <th>Date</th>
            <th>Products</th>
            <th>Total price</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        {% for item in factures %}
                <tr>
                    <td>{{ item.id }}</td>
                    <td>{{ item.date | date("d/m/Y") }}</td>
                    <td>
                        {% for product in item.order.products %}
                        -
                        {{ product }}
                        {% endfor %}
                    </td>
                    <td>{{ item.order.totalPrice  }} DT</td>
                    <td>
                        <a href="{{ path('deleteFacture',{'id':item.id}) }}">Delete</a>
                    </td>
                </tr>
        {% endfor %}
    </tbody>
</table>
{% for message in app.flashes('ExcelFileSaved') %}
    {{ message }}
{% endfor %}
{% for message in app.flashes('factureAdded') %}
    {{ message }}
{% endfor %}
{% for message in app.flashes('factureDeleted') %}
    {{ message }}
{% endfor %}
