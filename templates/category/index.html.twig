<form action="{{ path('uploadCategories') }}" method="post" enctype="multipart/form-data">

        <input type="hidden" name="token" value="{{ csrf_token('upload') }}" />

        <div>
            <label for="myfile">File to upload:</label>
            <input type="file" name="myfile" id="myfile">
        </div>

        <button type="submit">Upload</button>

</form>
<a href="{{ path('addCategory')}}">Ajouter</a>
<table class="table" border="1">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        {% for item in categories %}
            <tr>
                <td>{{ item.id }}</td>
                <td>{{ item.name }}</td>
                <td>
                    <a href="{{ path('deleteCategory',{'id':item.id}) }}">Delete</a>
                    <a href="{{ path('updateCategory',{'id':item.id}) }}">Update</a>
                </td>
            </tr>
        {% endfor %}
    </tbody>
</table>
{% for message in app.flashes('categoryAdded') %}
    {{ message }}
{% endfor %}
{% for message in app.flashes('categoryUpdated') %}
    {{ message }}
{% endfor %}
{% for message in app.flashes('categoryDeleted') %}
    {{ message }}
{% endfor %}
{% for message in app.flashes('categoryDeleteError') %}
    {{ message }}
{% endfor %}
{% for message in app.flashes('categoryDataUploaded') %}
    {{ message }}
{% endfor %}
